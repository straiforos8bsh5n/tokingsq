#!/usr/bin/env bash

#echo "************************ golint *********************************"
#for pkg in $(glide nv); do
#    golint $pkg | grep -v comment
#done
#echo "*****************************************************************"

echo "************************ govet **********************************"
go vet $(glide nv)
echo "*****************************************************************"

echo "************************ goimports ******************************"
goimports -d $(find . -type f -name '*.go' -not -path "./vendor/*")
echo "*****************************************************************"

echo "************************ gofmt  *********************************"
gofmt -s -w $(find . -type f -name '*.go' -not -path "./vendor/*")
echo "*****************************************************************"